<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @circle %>

    <% @circle_blogs.each do |circle_blog|%>
    <div>
      <%= circle_blog.content %>
    </div>
    <% end %>

    <%= link_to '＜ サークル一覧', circles_path, class: " rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%= link_to "ブログ一覧" ,"/circles/#{@circle.id}/circle_blogs",class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%= link_to "参加申請する" ,"/circles/#{@circle.id}/applies/new",class: " rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    
  </div>
</div>
